<% if object && object.errors.any? %>
    <div class="row">
      <div class="col-sm-12">
        <div>
          <%= object.errors.count %> errors did not allow the action to complete:
        </div>
        <ul>
          <% object.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>