<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><%= fa_icon 'plug' %> Connect your nation</h3>
                </div>
                <div class="panel-body">
                  <fieldset>
					<%= form_for(@nation) do |f| %>
					    <%= render 'shared/error_messages', object: @nation %>

					    <div class="form-group">
					      <%= f.text_field :slug, autofocus: true, class: 'form-control', placeholder: 'Slug' %>
					    </div>
					    <div class="form-group">
					      <%= f.submit 'Add Nation', class: 'btn btn-success btn-block' %>
					      <%= link_to 'Back', nations_path, class: 'btn btn-default btn-block' %>
					    </div>
					<% end %>
                  </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>