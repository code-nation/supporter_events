<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"> <%= fa_icon 'lock' %> Request access</h3>
                </div>
                <div class="panel-body">
                  <fieldset>
                    <%= form_tag join_users_path, method: :post do |f| %>
                      
                      <div class="form-group">
                        <%= text_field_tag :email, nil, autofocus: true, class: 'form-control', placeholder: 'Email' %>
                      </div>

                      <div class="actions">
                        <%= submit_tag 'Send request', class: 'btn btn-success btn-block' %>
                      </div>
                    <% end %>
                  </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>